{
  "name": "autopilot-trading-bot",
  "version": "2.0.0-beta",
  "description": "Institutional-grade AutoPilot AI trading bot for NSE India",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:worker": "cd apps/worker && python -m worker.main",
    "build": "npm run build:web && npm run build:api && npm run build:worker",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && docker build -t autopilot-api .",
    "build:worker": "cd apps/worker && docker build -t autopilot-worker .",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd apps/api && ruff check .",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd apps/web && npm run test",
    "test:api": "cd apps/api && pytest",
    "pipeline:daily": "curl -X POST http://localhost:8000/admin/pipeline/run-daily",
    "pipeline:executor": "curl -X POST http://localhost:8000/admin/pipeline/run-executor"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
